<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:text="Hitung Basal Metabolic Rate"
        android:textSize="20sp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etTinggi"
        android:inputType="number"

        android:hint="Masukkan Tinggi Badan (cm)"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etBerat"
        android:inputType="number"

        android:hint="Masukkan Berat Badan (kg)"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etUmur"
        android:inputType="number"

        android:hint="Masukkan Umur Anda"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="Pilih Jenis Kelamin"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="25dp">
        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="180dip"
            android:text="Male"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="180dip"
            android:text="Female"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:id="@+id/btHitung"
        android:layout_width="match_parent"
        android:text="Hitung BMR"
        android:layout_height="wrap_content" />
</LinearLayout>